#include <iostream>

void halfPyramid(int n) {
    std::cout << "--- Half Pyramid ---" << std::endl;
    for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << "* ";
        }
        std::cout << std::endl;
    }
}

void invertedHalfPyramid(int n) {
    std::cout << "\n--- Inverted Half Pyramid ---" << std::endl;
    for (int i = n; i >= 1; --i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << "* ";
        }
        std::cout << std::endl;
    }
}

int main() {
    int size = 5;
    halfPyramid(size);
    invertedHalfPyramid(size);
    return 0;
}
